<%- include('../partials/header') %>
<section class="new-activity">
<form id="add-activity-form" action="/clients/<%= clients._id %>/activities" method="POST">
    <label>Client</label>
    <input name="client" required value="<%= clients._id %>" type="hidden">
    <label>Activity</label>
    <input type="text" name="content">
    <label>Date</label>
    <input type="date" name="date">
    <input class="add-activity-button" type="submit" value="Add Activity">
</form>
</section>
<%- include('../partials/footer') %>