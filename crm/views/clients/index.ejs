<%- include('../partials/header') %>

<h2 class="client-header">Client List</h2>
<table id="list">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% clients.forEach(function(c) { %>
            <tr>
                <td><%= c.clientName %></td>
                <td><%= c.clientPhoneNumber %></td>
                <td><%= c.clientEmailAddress %></td>
                <td><a href="/clients/<%= c._id %>">More Details</a></td>
            </tr>
        <% }) %>
        <a href="/clients/new">Add New Client</a>
    </tbody>
</table>
<%- include('../partials/footer') %>